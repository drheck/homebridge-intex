{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
// disable this rule:
// "strict": true,

// enable this rule:
		"noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}
